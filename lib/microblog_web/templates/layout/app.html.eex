<%= if @current_user do %>
  <span class="text-light mx-1">
    <%= @current_user.username %> |
    <%= link("logout", to: session_path(@conn, :logout), method: :delete) %>
  </span>
<% else %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%= form_for @conn, session_path(@conn, :login),
    [as: "user", class: "form-inline w-75"], fn f -> %>
    <input type="text" placeholder="username" class="form-control" name="username">
    <button class="btn btn-light my-2 my-sm-0 m-1" type="submit">Log in</button>
  </div>
<% end %>
<% end %>


<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <form class="form-inline">
    <input type="text" placeholder="Search the void" class="form-control">
    <button class="btn btn-light my-2 my-sm-0 m-1" type="submit">Do it</button>
  </form>
</div>
    </nav> 

    <div class="container">
      <!-- if/end lines below taken from nu_mart notes -->
      <%= if get_flash(@conn, :info) do %>
        <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <% end %>
      <%= if get_flash(@conn, :error) do %>
        <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
      <% end %>

      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>

    </div> <!-- /container -->
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
